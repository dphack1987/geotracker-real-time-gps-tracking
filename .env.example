# Configuración de Base de Datos
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=securetrack_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=securetrack

# Configuración de Pool de Conexiones
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Configuración de la Aplicación
NODE_ENV=production
PORT=8000

# Configuración de Seguridad
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
COOKIE_SECRET=your_cookie_secret_here

# Configuración de Servicios Externos
MAPS_API_KEY=your_maps_api_key_here
GEOCODING_API_KEY=your_geocoding_api_key_here

# Configuración de Rastreo
MAX_TRACKING_DURATION=3600000  # 1 hora en milisegundos
DEFAULT_LOCATION_TIMEOUT=30000  # 30 segundos
LOCATION_UPDATE_INTERVAL=5000   # 5 segundos

# Configuración de Caché
REDIS_URL=redis://localhost:6379

# Configuración de Logs
LOG_LEVEL=info
LOG_FORMAT=json

# Límites y Protección
RATE_LIMIT_WINDOW=900000       # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100    # máximo de solicitudes por ventana
MAX_PAYLOAD_SIZE=1mb          # tamaño máximo de payload

# URLs
NEXT_PUBLIC_API_URL=https://tu-dominio.com/api
NEXT_PUBLIC_APP_URL=https://tu-dominio.com
